<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:id="@android:id/background">
		<shape android:shape="rectangle" >
			<solid android:color="@color/colorPrimaryVariant" />
			<corners android:radius="@dimen/padding_16"/>
		</shape>
	</item>

	<item android:id="@android:id/secondaryProgress">
		<clip>
			<shape>
				<corners android:radius="@dimen/padding_16"/>
				<gradient
						android:startColor="#2a5e9a"
						android:centerColor="#dfaa86"
						android:centerY="0.75"
						android:endColor="#feb09e"
						android:angle="90"
				/>
			</shape>
		</clip>
	</item>

	<item android:id="@android:id/progress">
		<clip>
			<shape>
				<corners android:radius="@dimen/padding_16"/>
				<gradient
						android:startColor="#19385C"
						android:centerColor="#BE6A32"
						android:centerY="0.75"
						android:endColor="#FD4116"
						android:angle="45"
				/>
			</shape>
		</clip>
	</item>
</layer-list>